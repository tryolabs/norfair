# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.md]
indent_size = 2
